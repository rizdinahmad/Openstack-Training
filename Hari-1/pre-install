# On node controller
- update & upgrade
apt clean all && apt update -y && apt upgrade -y
apt autoremove

- set static ens160 & ens192
vim /etc/netplan/00-installer-config.yaml
netplan apply

- set hostname
hostnamectl set-hostname controller

- set /etc/hosts
#...
10.30.100.1 controller

- set date/timezone
timedatectl set-timedate Asia/Jakarta

- install ntp server
apt install chrony
vim /etc/chrony/chrony.conf
#...
server 0.id.pool.ntp.org
server 1.id.pool.ntp.org
server 2.id.pool.ntp.org
server 3.id.pool.ntp.org
allow 10.30.100.0/24
#...
systemctl restart chrony
chronyc sources

- install openstack client
add-apt-repository cloud-archive:victoria
apt install python3-openstackclient

- install database server
apt install mariadb-server python3-pymysql
vim /etc/mysql/mariadb.conf.d/50-server.cnf
#...
[mysqld]
bind-address = 10.30.100.1
max_connections = 4096
#...
systemctl restart mariadb

- install message queue
apt install rabbitmq-server
rabbitmqctl add_user openstack password
rabbitmqctl set_permissions openstack ".*" ".*" ".*"

- install memcached
apt install memcached python3-memcache
vim /etc/memcached.conf 
#...
-l controller
#...
systemctl restart memcached

- install etcd
apt install etcd
vim /etc/default/etcd 
#...
ETCD_NAME="controller"
ETCD_DATA_DIR="/var/lib/etcd"
ETCD_INITIAL_CLUSTER_STATE="new"
ETCD_INITIAL_CLUSTER_TOKEN="etcd-cluster"
ETCD_INITIAL_CLUSTER="controller=http://10.30.100.1:2380"
ETCD_INITIAL_ADVERTISE_PEER_URLS="http://10.30.100.1:2380"
ETCD_ADVERTISE_CLIENT_URLS="http://10.30.100.1:2379"
ETCD_LISTEN_PEER_URLS="http://0.0.0.0:2380"
ETCD_LISTEN_CLIENT_URLS="http://10.30.100.1:2379"
#...
systemctl restart etcd